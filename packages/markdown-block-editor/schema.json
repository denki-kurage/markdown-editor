{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "settings",
    "type": "object",
    "properties": {
        "adminCss": {
            "type": "string"
        },
        "frontCss": {
            "type": "string"
        },
        "fontSize": {
            "type": "integer"
        },
        "fontFamily": {
            "type": "string"
        },
        "configurations": {
            "type": "object",
            "additionalProperties": {
                "anyOf": [
                    { "type": "string" },
                    { "type": "number" },
                    { "type": "boolean" },
                    { "type": "array", "items": { "anyOf": [
                        { "type": "string" },
                        { "type": "number" }
                    ] } }
                ]
            }
        }
    }
}